<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowInfoActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/brookelark_unsplash"
        android:text="@string/results_from_open_food_facts_org" />

    <TextView
        android:id="@+id/originTextView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_horizontal|start"
        android:layout_gravity="center_horizontal"
        android:text="@string/Fact3" />

    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_horizontal|start"
        android:layout_gravity="center_horizontal"
        android:text="@string/Fact1" />

    <TextView
        android:id="@+id/manufTextView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_horizontal|start"
        android:layout_gravity="center_horizontal"
        android:text="@string/Fact2" />

</LinearLayout>